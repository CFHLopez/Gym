<%= form_for(@administradors, :html => {:role => 'form'}) do |f| %>
    <% if @administradors.errors.any? %>
        <%= pluralize(@administradors.errors.count, "ERROR")%>
        <% @administradors.errors.full_menssages.each do |actual| %>
            <%= actual %>
        <% end %>
    <% end %>
    <%= f.label :nombre %>
    <%= f.text_field :nombre %>
    <%= f.label :edad %>
    <%= f.text_field :edad %>
    <%= f.label :email %>
    <%= f.text_field :email %>
    <%= f.label :desc %>
    <%= f.text_field :desc %>
    <%= f.submit %>
<% end %>
