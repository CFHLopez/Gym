<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="container">
    <h2><b>Iniciar Sesión</b></h2>
    <div class="panel-group">
    <big><b>  
      <div class="panel-group">
        <%= f.label :email ,"Email" %><br></b>
        <i><%= f.email_field :email, autofocus: true %></i>
      </div><b>
      <div class="panel-group">
        <%= f.label :password , "Contraseña" %><br></b>
        <i><%= f.password_field :password, autocomplete: "off", placeholder: "********" %></i>
      </div><b>
      <% if devise_mapping.rememberable? -%>
        <div class="panel-group">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me , "Recordar Mis Datos" %></b>
        </div>
      <% end %>
      </b></big>
      <div class="actions">
        <%= f.submit "Iniciar Sesión", class: "btn btn-success" %>
        <%= link_to "Volver", "/", class: "btn btn-primary" %>
      </div>
    </div>
  </div>
<% end %>
