  <table class="table">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Opciones</th>
      </tr>
    </thead>
    <tbody>
      <% @clases.each do |actual| %>
        <tr>
          <td><b><%= link_to(actual.nombre, actual) %></b></td>
          <td><%= link_to 'Editar', editar_clase_path(actual), class: "btn btn-info"%>
          <%= link_to 'Borrar', actual, method: :delete, data: {confirm: '¿Está Seguro?'}, class: "btn btn-danger"%></td>
        </tr>
      <%end%>
    </tbody>
  </table><br><br>
  <%= will_paginate @clases, renderer: BootstrapPagination::Rails %>
