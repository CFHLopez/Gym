                    <i><%= x.nombre %></i>
                  <% end %>
                <% end %>
              </div>
            </div>
            <div class="col-md-4">
              <div class="panel-body">
      	        <b><%=" DescripciÃ³n:" %></b> 
      	        <i><%= @clases.desc %></i>
              </div>
            </div>
          </div>
        </div>
      </big>
    </div>
  </div>
  <%= link_to "Volver", Clase, class: "btn btn-primary" %>
