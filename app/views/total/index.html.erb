<div class="container">
  <div class="panel-group">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h1><b><%= "Asistencias" %></b></h1>
      </div>
      <div class="panel-body">
        <%= link_to 'Alumno', Rutina , class: "btn btn-success btn-lg"%>
        <%= link_to 'Clase', Asist , class: "btn btn-primary btn-lg"%>
        <div class="row">
          <div class="col-md-6">
            <h4><b><%= "Clases" %></b></h4>
            <table class="table">
              <thead>
                <tr>
                  <th>Nombre</th>
                  <th>Cant. Alumnos/as</th>
                  <th>Fecha</th>
                </tr>
              </thead>
              <tbody>
                <% @asists.each do |actual| %>
                  <tr>
                    <td><b><%= actual.nombre %></b></td>
                    <td><b><%= actual.cantidad %></b></td>
                    <td><b><%= actual.created_at.strftime("%d/%m/%Y")%></b></td>
                  </tr>
                <%end%>
              </tbody>
            </table>
          </div>
          <div class="col-md-6">
            <h4><b><%= "Alumnos" %></b></h4>
            <table class="table">
              <thead>
                <tr>
                  <th>Nombre</th>
                  <th>Plan</th>
                  <th>Fecha</th>
                </tr>
              </thead>
              <tbody>
                <% @rutinas.each do |ruti| %>
                  <% xxx = "Anonimo/a" %>
                  <% pln = "Alumno/a no Inscrito" %>
                  <% @alumnos.each do |x| %>
                    <% if ruti.rut == x.rut %>
                      <% xxx = x.nombre %>
                      <% pln = x.plan.nombre %>
                    <% end %>
                  <% end %>
                  <tr>
                    <td><b><%= xxx %></b></td>
                    <td><b><%= pln %></b></td>
                    <td><b><%= actual.created_at.strftime("%d/%m/%Y")%></b></td>
                  </tr>
                <%end%>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>