<div class="container">
  <div class="panel-group">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h1><b><%= "Asistencias" %></b></h1>
      </div>
      <div class="panel-body">
        <%= link_to 'Alumno', Rutina , class: "btn btn-success btn-lg"%>
        <%= link_to 'Clase', Asist , class: "btn btn-primary btn-lg"%>
        <div class="row">
          <div class="col-md-6">
            <h4><b><%= "Clases" %></b></h4>
            <table class="table">
              <thead><tr>
                <th>Clase</th>
                <th>Fecha</th>
                <th>Cant. Alumnos</th>
                <th>Opciones</th>
              </tr></thead>
              <tbody>
                <% @asists.each do |actual| %>
                  <tr>
                    <td><b><%= actual.clase.nombre %></b></td>
                    <td><b><%= actual.created_at.strftime("%d/%m/%Y") %></b></td>
                    <td><b><%= actual.cantidad %></b></td>
                    <td> <%= link_to 'Editar', editar_asist_path(actual), class: "btn btn-info"%>
                    <% if current_user.role == 'Administrador'%>
                      <%= link_to 'Borrar', actual, method: :delete, data: {confirm: '¿Está Seguro?'}, class: "btn btn-danger"%></td>
                    <% end %>
                  </tr>
                <%end%>
              </tbody>
            </table>
          </div>
          <div class="col-md-6">
            <h4><b><%= "Alumnos" %></b></h4>
            <table class="table">
              <thead>
                <tr>
                  <th>Nombre</th>
                  <th>Plan</th>
                  <th>Fecha</th>
                  <th>Opciones</th>
                </tr>
              </thead>
              <tbody>
                <% @rutinas.each do |ruti| %>
                  <% xxx = "Anonimo/a" %>
                  <% pln = "Alumno/a no Inscrito" %>
                  <% @alumnos.each do |x| %>
                    <% if ruti.rut == x.rut %>
                      <% xxx = x.nombre %>
                      <% pln = x.plan.nombre %>
                    <% end %>
                  <% end %>
                  <tr>
                    <td><b><%= xxx %></b></td>
                    <td><b><%= pln %></b></td>
                    <td><b><%= ruti.fecha.strftime("%d/%m/%Y") %></b></td>
                    <td><%= link_to 'Mostrar', rutina_path(ruti), class: "btn btn-success"%>
                    <%= link_to 'Editar', editar_rutina_path(ruti), class: "btn btn-info"%>
                    <%= link_to 'Borrar', ruti, method: :delete, data: {confirm: '¿Está Seguro?'}, class: "btn btn-danger"%></td>
                  </tr>
                <%end%>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>