  <table class="table">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Precio</th>
      </tr>
    </thead>
    <tbody>
      <% @plans.each do |actual| %>
        <tr>
          <td><b><%= link_to(actual.nombre, actual) %></b></td>
          <td><b><%= actual.precio %></b></td>
          <td> <%= link_to 'Editar', editar_plan_path(actual), class: "btn btn-info"%></td>
          <% cant = 0 %>
          <% @alumnos.each do |x|%>
            <% if x.plan.nombre == actual.nombre %>
              <% cant = cant + 1 %>
            <% end %>
          <% end %>
          <% if cant == 0 %>
            <td><%= link_to 'Eliminar', actual, method: :delete, data: {confirm: '¿Está Seguro?'}, class: "btn btn-danger"%></td>
          <% end %>
        </tr>
      <%end%>
    </tbody>
  </table>
  <%= will_paginate @plans, renderer: BootstrapPagination::Rails %>
</div>