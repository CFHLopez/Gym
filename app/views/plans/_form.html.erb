        <%= pluralize(@plans.errors.count, "Error")%>
        <% @plans.errors.full_messages.each do |actual| %>
            <%= actual %>
        <% end %>
    <% end %>
    <div class="container">
      <div class="panel-group">
      <big><b>
        <div class="panel-body">
          Nombre: 
          <%= f.text_field :nombre %><br>
        </div>
        <div class="panel-body">
          Precio:
          <%= f.select :precio, [["5000"],["10000"],["15000"],["18000"],["20000"],["30000"]]%><br>
        </div>
        <div class="panel-body">
          Descripci√≥n:<br>
          <%= f.text_area :desc, size: "30x6" %><br>
        </div>
        <%= f.submit value="Agregar", class: "btn btn-success"%>
