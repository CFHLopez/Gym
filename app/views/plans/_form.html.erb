<%= form_for(@plans, :html =>{:role => 'form'}) do |f| %>
    <% if @plans.errors.any? %>
        <%= pluralize(@plans.errors.count, "ERROR")%>
        <% @plans.errors.full_messages.each do |actual| %>
            <%= actual %>
        <% end %>
    <% end %>
    <%= "Nombre: "%>
    <% f.label :nombre %>
    <%= f.text_field :nombre %><br><br>
    <%= f.submit value="AGREGAR"%>
    <%= link_to "VOLVER", Plan, class: "btn btn-default"%>
<% end %>
