<div class="container">
<h1><b><%= "Asistencias" %></b></h1>
<table class="table">
  <thead>
  <tr>
    <th>Fecha</th>
    <th>Clase</th>
    <th>Cant. Alumnos/as</th>
  </tr>
  </thead>
  <tbody>
  <% @asists.each do |actual| %>
      <tr>
        <td><b><%= actual.fecha.strftime("%d - %m - %Y") %></b></td>
        <td><b><%= actual.clase.nombre %></b></td>
        <td><b><%= actual.cantidad %></b></td>
        <td> <%= link_to 'Editar', editar_asist_path(actual), class: "btn btn-info"%></td>
        <td><%= link_to 'Eliminar', actual, method: :delete, data: {confirm: 'Â¿ESTA SEGURO?'}, class: "btn btn-danger"%></td>
      </tr>
  </tbody>
  <%end%>
</table>
<br><br>
<span class="tn btn-warning btn-lg bt pull-leght glyphicon glyphicon-plus"><%= link_to 'NUEVA ASISTENCIA',nueva_asist_path %></span><br>
<%= will_paginate @asists, renderer: BootstrapPagination::Rails %>
</div>