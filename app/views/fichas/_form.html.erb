<%= form_for(@fichas, :html =>{:class => 'panel-body'}) do |f| %>
  <div class="container"><big>
    <div class="panel-body">
      <% if @fichas.errors.any? %>
        <div class="alert fade in alert-error">
          <% if @fichas.errors.count == 1 %>
            <h2><%= pluralize(@fichas.errors.count, "Error")%><%= " impide realizar esta acción: "%></h2>
            <ul>
              <% @fichas.errors.full_messages.each do |actual| %>
                <li><%= actual %></li>
              <% end %>
            </ul>
          <% else %>
            <h2><%= pluralize(@fichas.errors.count, "Errore")%><%= " impiden realizar esta acción: "%></h2>
            <ul>
              <% @fichas.errors.full_messages.each do |actual| %>
                <li><%= actual %></li>
              <% end %>
            </ul>
          <% end %>
        </div>
      <% end %>
    </div>
    <div class="form-group">
      <big><b>
      <h3>Datos</h3>
      <div class="panel-body">
        <label class="control-label col-xs-3">Alumno:</label></b>
        <i><%=f.collection_select :alumno_id, Alumno.order("Nombre"), :id, :nombre, include_blank: true %></i><br>
      </div>
      <div class="panel-body">
        <label class="control-label col-xs-3">Peso:</label></b>
        <i><%= f.text_field :peso, placeholder: "Ej: 50.5" %></i><b><%= " Kilogramos" %><br>
      </div>
      <div class="panel-body">
        <label class="control-label col-xs-3">Estatura:</label></b>
        <i><%= f.text_field :estatura, placeholder: "Ej: 1.5"%><b></i><%= " Metros" %><br>
      </div><br>
      </b><i>**No Es Obligatorio Rellenar Los Siguientes Campos**</i><b><br>
      <h3>Piegometria</h3>
      <div class="panel-body">
        <label class="control-label col-xs-3">Biceps:</label></b>
        <i><%= f.text_field :biceps, placeholder: "Ej: 20"%></i><b><%= " Centimetros" %><br>
      </div>
      <div class="panel-body">
        <label class="control-label col-xs-3">Triceps:</label></b>
        <i><%= f.text_field :triceps, placeholder: "Ej: 30"%></i><b><%= " Centimetros" %><br>
      </div>
      <div class="panel-body">
        <label class="control-label col-xs-3">Subescapular:</label></b>
        <i><%= f.text_field :subescapular, placeholder: "Ej: 10"%></i><b><%= " Centimetros" %><br>
      </div>
      <div class="panel-body">
        <label class="control-label col-xs-3">Suprailiaco:</label></b>
        <i><%= f.text_field :suprailiaco, placeholder: "Ej: 30"%></i><b><%= " Centimetros" %><br>
      </div>
      <h3>Antropometria</h3>
      <div class="panel-body">
        <label class="control-label col-xs-3">Torax:</label></b>
        <i><%= f.text_field :torax, placeholder: "Ej: 90"%></i><b><%= " Centimetros" %><br>
      </div>
      <div class="panel-body">
        <label class="control-label col-xs-3">Cintura:</label></b>
        <i><%= f.text_field :cintura, placeholder: "Ej: 100"%></i><b><%= " Centimetros" %><br>
      </div>
      <div class="panel-body">
        <label class="control-label col-xs-3">Brazo:</label></b>
        <i><%= f.text_field :brazo, placeholder: "Ej: 20"%></i><b><%= " Centimetros" %><br>
      </div>
      <div class="panel-body">
        <label class="control-label col-xs-3">Muslo:</label></b>
        <i><%= f.text_field :muslo, placeholder: "Ej: 40"%></i><b><%= " Centimetros" %></b><br>
      </div>
      </big>
    </div>
    <%= f.submit value="Guardar", class: "btn btn-success"%>
    <input type="reset" class="btn btn-default" value="Limpiar">
    <%= link_to "Volver", Ficha, class: "btn btn-primary"%>
  </div><br><br>
<% end %>