<%= form_for(@alumnos, :html =>{:class => 'panel-body'}) do |f| %>
  <div class="container"><big>
    <div class="panel-body">
      <% if @alumnos.errors.any? %>
        <div class="alert fade in alert-error">
          <% if @alumnos.errors.count == 1 %>
            <h2><%= pluralize(@alumnos.errors.count, "Error")%><%= " impide realizar esta acción: "%></h2>
            <ul>
              <% @alumnos.errors.full_messages.each do |actual| %>
                <li><%= actual %></li>
              <% end %>
            </ul>
          <% else %>
            <h2><%= pluralize(@alumnos.errors.count, "Errore")%><%= " impiden realizar esta acción: "%></h2>
            <ul>
              <% @alumnos.errors.full_messages.each do |actual| %>
                <li><%= actual %></li>
              <% end %>
            </ul>
          <% end %>
        </div>
      <% end %>
    </div>
    <div class="form-group"><b>
      <div class="panel-body">
        <label class="control-label col-xs-3">Nombre:</label></b>
        <i><%= f.text_field :nombre, placeholder: "Nombre Completo" %></i><br>
      </div><b>
      <div class="panel-body">
        <label class="control-label col-xs-3">Rut:</label></b> 
        <i><%= f.text_field :rut, placeholder: "XXXXXXX-X" %></i><br>
      </div><b>
      <div class="panel-body">
        <label class="control-label col-xs-3">Edad:</label></b>
        <i><%= f.text_field :edad, placeholder: "Ejemplo: 15" %></i><br>
      </div>
      <div class="panel-body">
        <label class="control-label col-xs-3">Genero:</label></b>
        <i><%= f.select :sexo, [["Masculino"], ["Femenino"]] %></i><br>
      </div><b>
      <div class="panel-body">
        <label class="control-label col-xs-3">Plan:</label></b>
        <i><%=f.collection_select :plan_id, Plan.order("Nombre"), :id, :nombre, include_blank: true %></i><br>
      </div>
      <div class="panel-body">
        <label class="control-label col-xs-3">¿Complicación Medica?:</label></b>
        <i><%= f.text_area :desc, size: "30x6", placeholder: "En caso de tener algun problema" %></i><br>
      </div>
      </big>
    </div>
    <%= f.submit value="Guardar", class: "btn btn-success" %>
    <input type="reset" class="btn btn-default" value="Limpiar">
    <%= link_to "Volver", Alumno, class: "btn btn-primary" %>
  </div>
  <br><br>
<% end %>
