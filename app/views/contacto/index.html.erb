<div class="container">
  	<div class="panel-group">
  		<div class="panel panel-success">
  	  		<div class="panel-heading">
				<h1>Contactanos</h1>
				<script>
					function validacion(id){
						var elem=document.getElementById(id);
						if(elem.checkvalidity())
							elem.style.borderColor="blue";
						else
							elem.style.borderColor="red";
					}
				</script>
			</div>
			<div class="panel-body">
        		<div class="row">
          			<div class="col-md-4">
            			<div class="panel-body">
            				<h3><b>Dirección:</b></h3>
							<dl>
								<dt>Vicuña Mackenna #10422, La Florida.</dt>
								<dd><span><b>Teléfono:</b> +569 7346 4561</span></dd>
								<dd><span><b>E-mail:</b></span> <a class="link-2" href="#">funcionality.chris@gym.cl</a></dd>
							</dl>
						</div>
					</div>
					<div class="col-md-4">
						<section id="content">
							<div class="main">
								<div class="indent-left">
									<div class="wrapper">
										<article class="col-1">
											<iframe src="https://www.google.com/maps/embed/v1/view?key=AIzaSyDJ4PH-6n3qAfAxLntjfFII1TjuW1pQQZo&center=-33.552472, -70.586491&zoom=40&maptype=satellite" width="500" height="300" frameborder="0" style="border:0" allowfullscreen></iframe>
										</article>
									</div>
								</div>
							</div>
						</section>
					</div>
				</div>
				<div class="panel-body">
					<b><h3>¿Preguntas?</h3></b>
					<form id="contact-form">
						<fieldset>
							<div class="panel-body">
								<b><label class="control-label col-xs-2">Nombre:</label></b>
								<i><input type="text" name="nombre" placeholder="Nombre"  id="nombre"  onblur="this.checkValidity();" /></i>
							</div>
							<div class="panel-body">
								<b><label class="control-label col-xs-2">Email:</label></b>
								<i><input type="text" name="email"id="email" placeholder="example@example.com"oninput="validacion('email') required" /></i>
							</div>
							<div class="panel-body">
								<b><label class="control-label col-xs-2">N° Celular:</label></b>
								<i><input type="text" value="Telefono" onBlur="if(this.value=='') this.value='Telefono'" onFocus="if(this.value =='Telefono' ) this.value=''" pattern="^[9|8|7|6]\d{8}$" minlenght="8" maxlength="8" /></i>
							</div>
							<div class="panel-body">
								<b><label class="control-label col-xs-2">Mensaje:</label></b>
								<i><textarea onBlur="if(this.value=='') this.value='Message'" onFocus="if(this.value =='Message' ) this.value=''"></textarea></i>
							</div>
							<div class="buttons-wrapper">
								<a class="btn btn-success" onClick="document.getElementById('contact-form').submit()">Enviar</a>
								<a class="btn btn-default" onClick="document.getElementById('contact-form').reset()">Limpiar</a>
							</div>
						</fieldset>
					</form>	
				</div>
			</div>
		</div>
	</div>
</div>
