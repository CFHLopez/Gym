<%= form_for(@pagos, :html =>{:role => 'form'}) do |f| %>
    <% if @pagos.errors.any? %>
        <%= pluralize(@pagos.errors.count, "ERROR")%>
        <% @pagos.errors.full_messages.each do |actual| %>
            <%= actual %>
        <% end %>
    <% end %>
    <%= "Seleccionar Alumno/a: "%>
    <%=f.collection_select :alumno_id, Alumno.order("Nombre"), :id, :nombre, include_blank: true %>
    <%=%>
    <%= f.submit value="Agregar", class: "btn btn-default"%>
<% end %>
