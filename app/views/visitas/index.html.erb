<div class="container">
  <div class="panel-group">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h1><b><%= current_user.nombre %></b></h1>
        <h3><b><%= current_user.rut %></b></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-6">
            <h4><b><%= "Fichas" %></b></h4>
            <table class="table">
              <thead>
                <tr>
                  <th>Fecha</th>
                  <th>Opciones</th>
                </tr>
              </thead>
              <tbody>
                <% @fichas.each do |actual| %>
                  <tr>
                    <% if actual.rut == current_user.rut %>
                      <td><b><%= actual.created_at.strftime("%d/%m/%Y")%></b></td>
                      <td><%= link_to 'Mostrar', ficha_path(actual), class: "btn btn-success"%></td>
                    <% end %>
                  </tr>
                <%end%>
              </tbody>
            </table>
          </div>
          <% if current_user.role == 'Alumno' %>
          <div class="col-md-6">
            <h4><b><%= "Pagos" %></b></h4>
            <table class="table">
              <thead>
                <tr>
                  <th>Fecha</th>
                  <th>Monto</th>
                </tr>
              </thead>
              <tbody>
                <% @pagos.each do |actual| %>
                  <tr>
                    <% if actual.rut == current_user.rut %>
                      <td><b><%= actual.created_at.strftime("%d/%m/%Y")%></b></td>
                      <td><b><%= actual.monto %></b></td>
                    <% end %>
                  </tr>
                <%end%>
              </tbody>
            </table>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>